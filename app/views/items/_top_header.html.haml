.morcari-header__inner
  .clearfix
    %h1.morcari-header__left
      = link_to root_path, {class: "header-logo"} do
        = image_tag("logo.svg", class: "top-logo")
    %form{action: "/", method: "post", class: "morcari-header__right"}
      %input{name: "title", size: "130", placeholder: "キーワードから探す", class: "morcari-search"}
  .morcari-header__navibox.clearfix
    .header-navibox__left
      %ul.header-nav
        %li
          %h2.header-nav__text#first-nav
            カテゴリー
        %li
          %h2.header-nav__text
            ブランド
    .header-navibox__right
      - if user_signed_in?
        %ul.user-nav
          %li
            = link_to "/users/#{current_user.id}" do
              = image_tag("member_photo_noimage_thumb.png")
              マイページ
          %li
            = link_to "users/entrance" do
              %i.fa.fa-bell
              お知らせ
          %li
            = link_to "users/entrance" do
              %i.fa.fa-check
              やることリスト
      - else
        %ul.user-nav
          %li
            = link_to "ログイン",new_user_session_path, class: "btn-red"
          %li
            = link_to "新規会員登録",entrance_path, class: "btn-blue"
